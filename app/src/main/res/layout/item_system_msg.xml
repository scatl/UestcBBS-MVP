<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            >

            <com.scatl.uestcbbs.custom.imageview.CircleImageView
                android:id="@+id/item_system_msg_user_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/item_system_msg_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/item_system_msg_user_icon"
                android:layout_marginStart="10dp"
                android:textSize="17sp"
                />


            <TextView
                android:id="@+id/item_system_msg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/item_system_msg_user_icon"
                android:layout_marginStart="10dp"
                android:layout_below="@id/item_system_msg_user_name"
                android:layout_marginTop="5dp"
                />

            <Button
                android:id="@+id/item_system_action_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shape_common_btn"
                style="?android:attr/borderlessButtonStyle"
                android:visibility="gone"
                android:textColor="#fff"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/item_system_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_system_msg_user_icon"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>