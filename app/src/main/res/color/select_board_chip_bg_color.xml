<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:color="@android:color/transparent" android:state_enabled="false"/>

    <!-- Selected -->
    <item android:color="?attr/colorSecondaryContainer" android:state_selected="true"/>
    <item android:color="?attr/colorSecondaryContainer" android:state_checked="true"/>

    <!-- Not selected -->
    <item android:alpha="0.5" android:color="?attr/colorOnSurfaceInverse" />
</selector>
